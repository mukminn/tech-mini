.container {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 80px);
  background: var(--background);
  color: var(--foreground);
  padding: 1.5rem;
  padding-bottom: calc(1.5rem + 80px);
}

.header {
  text-align: center;
  margin-bottom: 2rem;
}

.title {
  font-size: clamp(1.75rem, 5vw, 2.5rem);
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--foreground);
}

.subtitle {
  font-size: 1rem;
  color: var(--foreground);
  opacity: 0.7;
}

.badgesGrid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 1rem;
  max-width: 600px;
  width: 100%;
  margin: 0 auto;
}

.badgeCard {
  background: var(--surface);
  border: 2px solid var(--border);
  border-radius: 16px;
  padding: 1.5rem 1rem;
  text-align: center;
  min-height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.badgeCard.unlocked {
  border-color: var(--base-blue);
  background: var(--base-blue-light);
}

.badgeCard.locked {
  opacity: 0.6;
}

.badgeCard:active {
  transform: scale(0.98);
}

.badgeIcon {
  width: 64px;
  height: 64px;
  min-height: 44px;
  min-width: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1rem;
}

.badgeIconUnlocked {
  font-size: 3rem;
  animation: pulse 2s ease-in-out infinite;
}

.badgeIconLocked {
  font-size: 2.5rem;
  opacity: 0.5;
}

.badgeImage {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 64px;
  max-height: 64px;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.badgeName {
  font-size: 1rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--foreground);
}

.badgeDescription {
  font-size: 0.75rem;
  color: var(--foreground);
  opacity: 0.7;
  margin-bottom: 0.75rem;
  line-height: 1.4;
}

.badgeDay {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--base-blue);
  margin-top: auto;
}

.badgeProgress {
  font-size: 0.75rem;
  color: var(--foreground);
  opacity: 0.6;
  margin-top: 0.5rem;
}

@media (max-width: 480px) {
  .badgesGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

